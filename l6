#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of terms: ";
    cin >> n;
    int a = 0, b = 1;
    int sum = 0;
    cout << "Fibonacci Series: ";
    for (int i = 1; i <= n; i++) {
        cout << a << " ";
        sum += a;
        int next = a + b;
        a = b;
        b = next;
    }
    cout << endl;
    cout << "Sum = " << sum << endl;
    return 0;
}